<p id="notice"><%= notice %></p>
<h1>ブログ</h1>
<table>
  <thead>
    <tr>
      <th>タイトル:</th><br>
      <th>コンテンツ:</th><br>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.content %></td>
        <td><%= link_to 'Show', blog %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: '削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
